(defrule
    (civilian-population >= aldeanos-dark)
    (can-research feudal-age)
    (research-completed ri-loom)
    =>
    (research feudal-age)
	(chat-to-allies "Researching Feudal Age")
)

(defrule
    (can-research castle-age)
    (civilian-population >= aldeanos-feudal)
    =>
    (research castle-age)
	(chat-to-allies "Researching Castle Age")
)

(defrule
    (can-research imperial-age)
    =>
    (research imperial-age)
	(chat-to-allies "Researching Imperial Age")
)